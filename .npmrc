# NPM Configuration for reliable builds
registry=https://registry.npmjs.org/
timeout=60000
retry-max=3
retry-min-timeout=10000
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Reduce log noise
loglevel=warn
progress=false

# Improve performance
prefer-offline=false
audit=false
fund=false